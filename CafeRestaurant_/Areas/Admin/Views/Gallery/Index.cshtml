@model IEnumerable<CafeRestaurant_.Models.Gallery>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <a asp-action="Create"class="btn btn-primary">Add New Photo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Photos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @if (item.Image == null)
                    {
                        <img src="~/Site/images/no image.jpeg" width="100" height="80"/>
                    }
                    else
                    {
                        <img src="@item.Image" width="100" height="80" />
                    }
                </td>
            <td>
                
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
